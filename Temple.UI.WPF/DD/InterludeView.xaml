<UserControl x:Class="Temple.UI.WPF.DD.InterludeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dd="clr-namespace:Temple.ViewModel.DD;assembly=Temple.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance dd:InterludeViewModel }">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/DD/Images/interlude.jpg"/>
        <TextBlock Grid.Row="1" TextWrapping="Wrap" FontSize="20" Margin="10"
                   Text="{Binding Text}"/>
        <Button Grid.Row="1" Content="Continue.." HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"
                Command="{Binding ContinueCommand}"/>
    </Grid>
</UserControl>
