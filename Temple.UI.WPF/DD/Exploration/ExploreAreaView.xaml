<UserControl x:Class="Temple.UI.WPF.DD.Exploration.ExploreAreaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Temple.UI.WPF.DD.Exploration"
             xmlns:scrollFree="clr-namespace:Craft.UIElements.Geometry2D.ScrollFree;assembly=Craft.UIElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Focusable="True"
             KeyDown="ExploreAreaView_OnKeyDown"
             KeyUp="ExploreAreaView_OnKeyUp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <scrollFree:GeometryEditorView Grid.Row="0" Grid.Column="0" DataContext="{Binding GeometryEditorViewModel}"/>

        <Button Grid.Row="1" Content="Continue.." HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"
                Command="{Binding ContinueCommand}"/>
    </Grid>
</UserControl>
