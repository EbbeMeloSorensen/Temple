<UserControl x:Class="Temple.UI.WPF.DD.Exploration.ExploreAreaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Temple.UI.WPF.DD.Exploration"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/DD/Images/Explore_concept.png"/>
        <TextBlock Grid.Row="1" TextWrapping="Wrap" FontSize="20" Margin="10"
                   Text="This is the area exploration view, but nothing much to explore yet.."/>
        <Button Grid.Row="1" Content="Back to Main menu.." HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"
                Command="{Binding ContinueCommand}"/>
    </Grid>
</UserControl>
