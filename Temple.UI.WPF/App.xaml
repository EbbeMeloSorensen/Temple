<Application x:Class="Temple.UI.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:Temple.ViewModel;assembly=Temple.ViewModel"
             xmlns:wpf="clr-namespace:Temple.UI.WPF">
    <Application.Resources>
        <ResourceDictionary>

            <DataTemplate DataType="{x:Type viewModel:CreateOrUpdatePersonDialogViewModel}">
                <wpf:CreateOrUpdatePersonDialogView/>
            </DataTemplate>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Craft.UIElements;component/Dialogs/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
