<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Temple.POC.AvaloniaApp.ViewModels"
        x:Class="Temple.POC.AvaloniaApp.MainWindow"
        Title="Temple.POC.AvaloniaApp"
        Width="400" Height="200">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="{Binding Greeting}" FontSize="18" HorizontalAlignment="Center"/>
        <Button Content="Click me" Command="{Binding UpdateGreetingCommand}" Width="120" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
